@model _2434Tools.Models.ViewModels.SingInViewModel
@{
    ViewData["Title"] = "Sign in";
}

<div class="d-flex justify-content-center">
    <form method="post" class="col-12 col-md-9">
        <h2 class="text-center">Sign In</h2>
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="form-group">
            <label class="col-form-label" asp-for="Email">Email</label>
            <input class="form-control" type="email" asp-for="Email" placeholder="Email"/>
        </div>
        <div class="form-group">
            <label class="col-form-label" asp-for="Password">Password</label>
            <input class="form-control" type="password" asp-for="Password" placeholder="Password"/>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" asp-for="Remember"/>
            <label asp-for="Remember" class="form-check-label"></label>
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Sumbit</button>
    </form>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}