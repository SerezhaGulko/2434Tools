@{ 
    ViewData["Title"] = "Moderating Groups";
}

<div class="container">
    <div>
        <a asp-action="Create">Create a group</a>
    </div>
    @foreach (_2434Tools.Models.Group group in ViewBag.Groups)
    {   <div class="row justify-content-sm-around justify-content-center mb-2">
            <h5 class="col-sm-10 col-6">@group.Name</h5>
            <div class="col-sm-2 col-12">
                <a asp-action="Edit" asp-route-id="@group.Id">Edit</a>
                <a asp-action="Delete" asp-route-id="@group.Id">Delete</a>
            </div>
        </div>
    }
</div>