@model _2434Tools.Models.ViewModels.GroupViewModel
@{
    ViewData["Title"] = $"Edit {Model.Name}";
}

<form method="post" class="col-sm-6 col-12">
    <div class="form-group mx-sm-3 mb-2" style="margin-left: 0!important">
        <label asp-for="Name"></label>
    </div>
    <div class="form-group mx-sm-3 mb-2" style="margin-left: 0!important">
        <input asp-for="Name" class="form-control" />
    </div>
    <button asp-action="Edit" asp-route-id="@ViewBag.id" type="submit" class="btn btn-primary mb-2">Edit</button>
</form>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}