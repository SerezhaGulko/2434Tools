@model _2434Tools.Models.ViewModels.GroupViewModel;
@{
    ViewData["Title"] = "Create a group";
}

<form method="post" class="col-sm-6 col-12">
    <div class="form-group mx-sm-3 mb-2" style="margin-left: 0!important">
        <label asp-for="Name"></label>
    </div>
    <div class="form-group mx-sm-3 mb-2" style="margin-left: 0!important">
        <input asp-for="Name" class="form-control" />
    </div>
    <button asp-action="Create" type="submit" class="btn btn-primary mb-2">Create</button>
</form>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}