<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - _2434Tools</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/custom-site-max.css" />
</head>
<body>
    <nav class="navbar d-flex flex-row position-absolute box-shadow" style="right:0;">
        <div class="d-sm-inline-flex flex-row">
            <ul class="navbar-nav flex-grow-1 flex-row">
                <li class="nav-item">
                    <div>
                        <img style="width: 2rem; height: 2rem" src="~/icons/live-streaming.svg" />
                        <a class="nav-link text-dark stretched-link" asp-area="" asp-controller="Home" asp-action="Index">Live</a>
                    </div>
                </li>
                <li class="nav-item">
                    <div>
                        <img style="width: 1.8rem; height: 1.8rem; margin: 0.1rem 0" src="~/icons/subscription.svg" />  
                        <a class="nav-link text-dark stretched-link" asp-area="" asp-controller="Liver" asp-action="Index">Channels</a>
                    </div>
                </li>
                @if (User.IsInRole(_2434Tools.Data.ApplicationRoles.Administrators))
                {
                    <li class="nav-item">
                        <div>
                            <div style="width: 2rem; height: 2rem" id="groupsBackground"></div>
                            <a class="nav-link text-dark stretched-link" asp-area="" asp-controller="Group" asp-action="Index">Groups</a>
                        </div>
                    </li>
                }
            </ul>
        </div>
    </nav>
    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <style>
        #groupsBackground {
            background: url("/icons/holoen-hug.jpg");
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center;
            filter: grayscale();
        }
        .navbar {
            padding: 0;
            border-radius: 4rem 0 0 4rem;
            padding: .125rem 0;
        }
        .nav-item > * {
            display: flex;
            flex-direction: column;
            align-items: center;
            position: relative;
            padding: .125rem;
            width: 100%;
            height: 100%;
            justify-content: flex-end;
        }
        .nav-item:first-of-type:hover {
            border-radius: 4rem 0 0 4rem;
        }
        .nav-item a {
            font-size: 0.85rem;
        }
        .nav-item {
            width: 5.7rem;
            height: 5rem;
            display: flex;
        }
        .nav-item:hover {
            background: rgba(74, 74, 74, 0.3);
        }

        @@media screen and (max-width: 767px) {
            .nav-item {
                width: 100%;
            }

            .nav-item > * {
                flex-direction: row;
                padding: .4rem .8rem;
            }

            .nav-item a {
                font-size: 0;
            }
        }
    </style>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
